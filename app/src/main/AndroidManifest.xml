<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidremington.infiltratr" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".InfiltratrApplication"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.davidremington.infiltratr.activities.LoginActivity"
            android:theme="@style/NoActionBarTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/GOOGLE_API_KEY"/>

        <activity
            android:name="com.davidremington.infiltratr.activities.MapsActivity"
            android:label="@string/activity_maps_title" >
        </activity>
    </application>

</manifest>